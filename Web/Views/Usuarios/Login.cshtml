
@{
    ViewData["Title"] = "Login";
}

<h1>Login</h1>

@if (ViewBag.Exito != null)
{
    <div class="alert alert-success">@ViewBag.Exito</div> 
}

@if (ViewBag.Error != null)
{
    <div class="alert alert-danger">@ViewBag.Error</div>
}

@if (ViewBag.ExitoRegistro != null) // Viene del usuario registrado
{
    <div class="alert alert-success">@ViewBag.ExitoRegistro</div>
}

<br />
<form method="post" action="/usuarios/login">
    <label>Email</label>
    <input type="email" placeholder="Ingrese email" name="email"/>

    <br />
    <br />

    <label>Contraseña</label>
    <input type="password" placeholder="Ingrese contraseña" name="contrasena"/>

    <br />
    <br />

    <input type="submit" class="btn btn-primary" value="Iniciar Sesión" />
</form>