@using Dominio
@model Cliente;
@{
    ViewData["Title"] = "Registro";
}

<h1>Registro de Clientes</h1>

@if (ViewBag.Error != null)
{
    <div class="alert alert-danger">@ViewBag.Error</div>
}

<br />

<form method="post" action="/usuarios/registro">
    <div class="form-group">
        <label class="form-label">Nombre</label>
        <input type="text" placeholder="Ingrese Nombre" class="form-control" name="Nombre" value="@Model.Nombre"/>
    </div>
    <div class="form-group">
        <label class="form-label">Apellido</label>
        <input type="text" placeholder="Ingrese Apellido" class="form-control" name="Apellido" value="@Model.Apellido" />
    </div>
    <div class="form-group">
        <label class="form-label">Email</label>
        <input type="text" placeholder="Ingrese Email" class="form-control" name="Email" value="@Model.Email" />
    </div>
    <div class="form-group">
        <label class="form-label">Contraseña</label>
        <input type="text" placeholder="Ingrese Contraseña" class="form-control" name="Contrasenia" value="@Model.Contrasenia" />
    </div>
    <br />
    <input type="submit" value="Registrarse" class="btn btn-secondary" />
</form>